<div class="container">
  
  <div style="margin-right: auto; margin-left: auto" class="col-md-5">
    <img src="/assets/_rocket/R2-3c6296bf2343b849b947f8ccfce0de61dd34ba7f9e2a23a53d0a743bc4604e3c.png" width="350" height="115" alt="R2">
  
    <div class="card card-login mx-auto mt-5">
  
      <div class="card-header">Change password</div>
  
      <div class="card-body">
  
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
          <div class="form-group">
  
            <div class="form-label-group">
              <%= f.label :password, "New password"%><br />
              <% if @minimum_password_length %>
              <em>(
                <%= @minimum_password_length %> characters minimum)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>
  
          </div>

          <div class="form-group">
  
            <div class="form-label-group">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
  
          </div>
        </div>
  
        <div class="actions">
          <%= f.submit "Change password", :class => 'btn btn-primary btn-block' %>
        </div>

        <% end %>

        <%= link_to "Log in", "/users/sign_in" %>
  
      </div>
    </div>
  </div>
</div> 