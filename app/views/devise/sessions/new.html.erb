<div class="container">
  
  <div style="margin-right: auto; margin-left: auto" class="col-md-5">
    <img src="/assets/_rocket/R2-3c6296bf2343b849b947f8ccfce0de61dd34ba7f9e2a23a53d0a743bc4604e3c.png" width="350"
      height="115" alt="R2">
  
    <div class="card card-login mx-auto mt-5">
  
      <div class="card-header">Login</div>
  
      <div class="card-body">
  
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
          <div class="form-group">
  
            <div class="form-label-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, :class => "form-control", autocomplete: "email"  %>
            </div>
  
          </div>

          <div class="form-group">
  
            <div class="form-label-group">
              <%= f.label :password %><br />
              <%= f.password_field :password, :class => "form-control",  autocomplete: "current-password" %>
            </div>
  
          </div>
        </div>
  
        <div class="actions">
          <%= f.submit "Log in", :class => 'btn btn-primary btn-block' %>
        </div>
  
        <div class="form-group">
  
          <div class="text-center">
            <% if devise_mapping.rememberable? -%>
  
            <div class="row">
  
              <div class="col-md-1">
                <%= f.check_box :remember_me %>
              </div>
  
              <div class="col-md-4">
                <%= f.label :remember_me %>
              </div>
  
            </div>
          </div>
          <% end -%>
          <% end %>
  
        </div>
  
        <%= link_to "Forgot your password?", "/users/password/new" %>
  
      </div>
    </div>
  </div>
</div> 